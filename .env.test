# =============================================================================
# TEST ENVIRONMENT CONFIGURATION
# =============================================================================

# Use PostgreSQL for testing (more reliable than Qdrant for CI/CD)
DATABASE_TYPE=postgresql

# PostgreSQL test database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cortex_test
DB_USER=cortex
DB_PASSWORD=test_password

# Database URL for testing
DATABASE_URL=postgresql://cortex:test_password@localhost:5432/cortex_test

# Minimal pool settings for testing
DB_POOL_MIN=1
DB_POOL_MAX=2
DB_IDLE_TIMEOUT_MS=5000
DB_CONNECTION_TIMEOUT_MS=5000
DB_QUERY_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=10000

# Test environment settings
NODE_ENV=test
LOG_LEVEL=error

# Disable features not needed for testing
ENABLE_CACHING=false
ENABLE_METRICS_COLLECTION=false
ENABLE_DEBUG_MODE=false

# Security settings for testing (use simple test values)
JWT_SECRET=test_jwt_secret_key_32_chars_minimum
ENCRYPTION_KEY=test_encryption_key_32_chars_hex

# Test scope settings
CORTEX_ORG=test-org
CORTEX_PROJECT=test-project
CORTEX_BRANCH=test

# MCP settings for testing
MCP_SERVER_NAME=cortex-test
MCP_SERVER_VERSION=2.0.0-test
MCP_TRANSPORT=stdio
MCP_MAX_BATCH_SIZE=10

# Mock Qdrant for tests (won't be used in PostgreSQL mode)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_PREFIX=test

# OpenAI (may not be needed for PostgreSQL-only tests)
OPENAI_API_KEY=test-key-for-testing-only