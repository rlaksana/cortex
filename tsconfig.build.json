{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Production-specific optimizations
    "types": ["node"],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "incremental": true,
    "composite": true,
    "removeComments": false,
    "stripInternal": true,
    "importHelpers": false,

    // Advanced incremental compilation options
    "tsBuildInfoFile": ".tsbuildinfo.prod",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Build optimization settings
    "isolatedModules": true,
    "preserveWatchOutput": true,
    "pretty": true,

    // Dependency tracking optimizations
    "disableSourceOfProjectReferenceRedirect": true,
    "disableSolutionSearching": true,
    "disableReferencedProjectLoad": true
  },
  "include": [
    "src/entry-point-factory.ts",
    "src/index.ts",
    "src/silent-mcp-entry.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**",
    "src/test/**"
  ],
  "references": [
    {
      "path": "./tsconfig.incremental.json"
    }
  ]
}