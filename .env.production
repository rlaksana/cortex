# Production Environment Configuration
# Copy to .env and customize for your deployment

# Database Configuration (Password-less authentication)
DATABASE_URL=postgresql://cortex:@localhost:5432/cortex_prod

# Logging
LOG_LEVEL=info

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000

# Scope Inference (Optional)
CORTEX_ORG=
CORTEX_PROJECT=cortex
CORTEX_BRANCH=main
