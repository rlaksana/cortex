# Cortex Memory MCP - WSL2 Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
DB_PASSWORD=cortex_secure_wsl_password_2025
DB_POOL_MIN=2
DB_POOL_MAX=8
DB_IDLE_TIMEOUT_MS=30000

# Application Configuration
LOG_LEVEL=info
NODE_ENV=production

# Cortex Memory Configuration
CORTEX_ORG=
CORTEX_PROJECT=cortex-memory-wsl
CORTEX_BRANCH=main

# WSL2 Specific Optimizations
# PostgreSQL connection string
DATABASE_URL=postgresql://cortex:cortex_secure_wsl_password_2025@postgres:5432/cortex_prod

# Performance settings for WSL2
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# Memory and Performance
MAX_MEMORY_MB=512
GC_INTERVAL_MS=30000

# Security (WSL2 environment)
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGIN=http://localhost:3000