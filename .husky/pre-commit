#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit quality checks..."

# Run type checking
echo "ğŸ“ Running type check..."
npm run type-check || {
  echo "âŒ Type check failed"
  exit 1
}

# Run linting
echo "ğŸ”§ Running lint check..."
npm run lint || {
  echo "âŒ Lint check failed"
  exit 1
}

# Run format check
echo "ğŸ¨ Running format check..."
npm run format:check || {
  echo "âŒ Format check failed"
  echo "ğŸ’¡ Run 'npm run format' to fix formatting issues"
  exit 1
}

# Run quick quality check
echo "âœ¨ Running quality check..."
npm run quality-check || {
  echo "âŒ Quality check failed"
  exit 1
}

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:unit || {
  echo "âŒ Unit tests failed"
  exit 1
}

# Run coverage gate validation (only if TypeScript files are staged)
echo "ğŸ“Š Running coverage gate validation..."
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.ts$' | grep '^src/' || true)
if [ -n "$STAGED_TS_FILES" ]; then
  echo "ğŸ“ TypeScript files staged, validating coverage..."
  npm run test:coverage:gate || {
    echo "âŒ Coverage gate validation failed"
    echo "ğŸ’¡ To skip coverage check (not recommended): git commit --no-verify"
    echo "ğŸ’¡ To fix coverage issues: npm run test:coverage:ci and review coverage reports"
    exit 1
  }
else
  echo "â„¹ï¸  No TypeScript files staged, skipping coverage validation"
fi

echo "âœ… All pre-commit checks passed!"
