# Database Connection (Direct PostgreSQL - Local Development)
DATABASE_URL=postgresql://cortex:cortex_pg18_secure_2025_key@localhost:5432/cortex_prod

# Logging
LOG_LEVEL=info
NODE_ENV=development

# MCP Server
MCP_TRANSPORT=stdio

# Scope Inference (optional, falls back to git)
CORTEX_ORG=my-org
CORTEX_PROJECT=cortex
CORTEX_BRANCH=main

# Performance Tuning (Optimized for local development)
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=10000
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=30000

# MCP Server Configuration (Local execution)
MCP_SERVER_NAME=cortex-memory
MCP_SERVER_VERSION=1.1.0
MCP_MAX_BATCH_SIZE=100
