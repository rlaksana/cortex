{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Production-ready configuration with gradual migration
    "downlevelIteration": true,
    "noUnusedLocals": false, // Temporarily disabled for gradual migration
    "noUnusedParameters": false, // Temporarily disabled for gradual migration
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
